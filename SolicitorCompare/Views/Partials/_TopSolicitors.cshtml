@{
    var umbracoHelper = Umbraco.Web.Composing.Current.UmbracoHelper;
    var latestSolicitors = umbracoHelper.Content(1365).Children.ToList().OrderByDescending(x => x.CreateDate).Take(5);
    var topSolicitors = umbracoHelper.Content(1365).Children.ToList().OrderByDescending(x => x.Value<decimal>("rating")).Take(5);
}

<div class="top-solicitors">
    <div class="top-solicitors__container">
        <h3 class="top-solicitors__heading">Top Solicitors</h3>
        @foreach (var solicitor in topSolicitors)
        {
            <a class="top-solicitors__solicitor" href="@solicitor.Url">@solicitor.Name</a>
        }
    </div>

    <div class="top-solicitors__container">
        <h3 class="top-solicitors__heading">Latest Added Solicitors</h3>
        @foreach (var solicitor in latestSolicitors)
        {
            <a class="top-solicitors__solicitor" href="@solicitor.Url">@solicitor.Name</a>
        }
    </div>
</div>
